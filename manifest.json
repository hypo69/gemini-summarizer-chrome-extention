{
  "manifest_version": 3,
  "name": "Короче!",
  "version": "1.0",
  "description": "Создаёт краткое резюме страницы с помощью Google Gemini",

  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "scripting"
  ],

  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "content.js" ],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [ "chat.html" ],
      "matches": [ "<all_urls>" ]
    }
  ],

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}